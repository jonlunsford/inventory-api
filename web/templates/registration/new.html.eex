<%= form_for @changeset, registration_path(@conn, :create), fn f -> %>
  <label>
    Email: <%= text_input f, :email %>
    <%= error_tag f, :email %>
  </label>

  <label>
    Password: <%= password_input f, :password %>
    <%= error_tag f, :password %>
  </label>

  <label>
    Confirm Password: <%= password_input f, :password_confirmation %>
    <%= error_tag f, :password_confirmation %>
  </label>

  <%= submit "Submit" %>
<% end %>
